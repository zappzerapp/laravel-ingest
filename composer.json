{
  "name": "zappzerapp/laravel-ingest",
  "description": "A robust, configuration-driven ETL and data import framework for Laravel. Handles CSV/Excel streaming, queues, validation, and relationships.",
  "keywords": [
    "laravel",
    "import",
    "csv",
    "excel",
    "etl",
    "data-ingestion",
    "streaming",
    "queue",
    "importer"
  ],
  "type": "library",
  "homepage": "https://github.com/zappzerapp/laravel-ingest",
  "license": "MIT",
  "authors": [
    {
      "name": "Robin Kopp",
      "email": "robin@zebra-fruit.de",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/zappzerapp/laravel-ingest/issues",
    "source": "https://github.com/zappzerapp/laravel-ingest",
    "docs": "https://zappzerapp.github.io/laravel-ingest/"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/zappzerapp"
    },
    {
      "type": "custom",
      "url": "https://www.buymeacoffee.com/wbbl"
    }
  ],
  "require": {
    "php": "^8.3",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "halaxa/json-machine": "^1.2",
    "illuminate/contracts": "^10.0 || ^11.0 || ^12.0",
    "illuminate/database": "^10.0 || ^11.0 || ^12.0",
    "illuminate/filesystem": "^10.0 || ^11.0 || ^12.0",
    "illuminate/http": "^10.0 || ^11.0 || ^12.0",
    "illuminate/queue": "^10.0 || ^11.0 || ^12.0",
    "illuminate/support": "^10.0 || ^11.0 || ^12.0",
    "illuminate/validation": "^10.0 || ^11.0 || ^12.0",
    "flow-php/etl": "^1.0",
    "flow-php/etl-adapter-csv": "^1.0",
    "flow-php/etl-adapter-json": "^1.0",
    "laravel/serializable-closure": "^1.3|^2.0",
    "spatie/simple-excel": "^3.2"
  },
  "require-dev": {
    "larastan/larastan": "^3.9",
    "laravel/pint": "^1.13",
    "league/flysystem-ftp": "^3.0",
    "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "roave/security-advisories": "dev-latest"
  },
  "suggests": {
    "league/flysystem-ftp": "Required to use the FTP source handler.",
    "league/flysystem-sftp-v3": "Required to use the SFTP source handler."
  },
  "autoload": {
    "psr-4": {
      "LaravelIngest\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LaravelIngest\\Tests\\": "tests/",
      "LaravelIngest\\Database\\Factories\\": "database/factories/"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan --memory-limit=1024M analyse",
    "lint": "vendor/bin/pint",
    "lint:check": "vendor/bin/pint --test",
    "test": "vendor/bin/pest",
    "test:coverage": "vendor/bin/pest --coverage",
    "docker:test": "docker compose exec -T app composer test",
    "docker:coverage": "docker compose exec -T app composer test:coverage",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-analyzer": true,
      "pestphp/pest-plugin": true
    },
    "platform": {
      "php": "8.4.0"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "LaravelIngest\\IngestServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
